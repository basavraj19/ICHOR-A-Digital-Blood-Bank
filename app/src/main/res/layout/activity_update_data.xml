<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UpdateData">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center"
            android:src="@drawable/userlogo">

        </ImageView>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="0dp"
            android:text="Basavraj22"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:layout_below="@+id/main">

        <EditText
            android:id="@+id/Fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Basavraj Birajdar"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:textSize="20sp">
        </EditText>

        <EditText
            android:id="@+id/phoneno_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="9960982652"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="20dp"
            android:textSize="20sp">
        </EditText>

        <EditText
            android:id="@+id/Pbloodgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="A+"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_bloodtype_24"
            android:drawablePadding="20dp"
            android:textSize="20sp">
        </EditText>

        <EditText
            android:id="@+id/Pgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Male"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:drawablePadding="20dp"
            android:textSize="20sp">
        </EditText>


        <EditText
            android:id="@+id/Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="22"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:drawablePadding="20dp"
            android:textSize="20sp">
        </EditText>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:backgroundTint="@color/design_default_color_background"
            android:text="UPDATE"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>